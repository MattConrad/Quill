<!DOCTYPE html>
@{
    string webAppPath = ViewBag.WebAppPath == null ? "/" : (string)ViewBag.WebAppPath;
}
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Quill</title>
    <link rel="stylesheet" href="@(webAppPath)lib/bootstrap/css/bootstrap.min.css" />
    <link rel="stylesheet" href="@(webAppPath)css/site.css" />
</head>
<body>
    <div class="container body-content">
        @RenderBody()
    </div>

    <script src="@(webAppPath)lib/jquery/dist/jquery.min.js"></script>
    <script src="@(webAppPath)lib/bootstrap/js/bootstrap.min.js"></script>
    <script src="@(webAppPath)js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
